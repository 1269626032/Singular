#!/bin/sh
for i in $*
do
  case $i in
  --prefix=*) prefix=`echo $i|sed 's/--prefix=//'` ;;
  --libdir=*) libdir=`echo $i|sed 's/--libdir=//'` ;;
  --includedir=*) includedir=`echo $i|sed 's/--includedir=//'` ;;
  esac
done

echo "#!/bin/sh" >config.status
echo "cd src" >>config.status
echo ./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix >>config.status
echo "cd .." >>config.status

cd src

./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix

cd ..

