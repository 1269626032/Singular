#!/bin/sh
for i in $*
do
  case $i in
  --prefix=*) prefix=`echo $i|sed 's/--prefix=//'` ;;
  --libdir=*) libdir=`echo $i|sed 's/--libdir=//'` ;;
  --includedir=*) includedir=`echo $i|sed 's/--includedir=//'` ;;
  esac
done
cd src

if test x$CC = x
then
  if test x$CXX = x
  then
    ./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix
  else
    ./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix CXX=$CXX
  fi
else
  if test x$CXX = x
  then
    ./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix CC=$CC
  else
    ./configure LIBDIR=$libdir INCLUDEDIR=$includedir PREFIX=$prefix CC=$CC CXX=$CXX
  fi
fi

cd ..

