#!/bin/sh

export GIT_WORK_TREE=`dirname "$0"`
export GIT_DIR="$GIT_WORK_TREE/.git"

ID=`$GIT_WORK_TREE/git-version-gen $GIT_WORK_TREE/.tarball-git-version`

git archive --format tar.gz -v -o singular-$ID.tar.gz HEAD && echo "singular-$ID.tar.gz was generated from git repository at [$GIT_WORK_TREE]" || echo "Sorry could not generate archive for [$GIT_WORK_TREE] with '$0'"
