windist: ${SINGULAR}
	cd Singular; ${MAKE} install-bindist
	rm -rf ${TMPDIR}
	${MKINSTALLDIRS} ${TMPDIR}/${BINDIR_NAME}
	${INSTALL} Singular/Singular-bindist \
                   ${TMPDIR}/${BINDIR_NAME}/Singular.exe
